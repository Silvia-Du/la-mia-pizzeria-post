@{
    @model List<Pizza>;

    Layout = "Guest/_Layout";
}
    
    <div class="pizza-container container">
        <div class="d-flex justify-content-between align-items-center px-5">

            <h2 class="mb-3">Tutte le tue pizze</h2>
            <a href="@Url.Action("Create", "Pizza")" class="btn btn-secondary">Nuova pizza</a>
        </div>
        <div class="row">
            @*se ci sono risultati*@
            @if(@Model.Count() != 0){

                @for (var i = 0; i < Model.Count; i++)
                {
                    <div class="col-4 p-2 mb-3">
                    
                         <div class="px-1 py-3 debug">
                            <h3>@Model[i].Name</h3>
                            <img src="@Model[i].Image" class="mb-2"/>
                            <h6>Euro: @Model[i].Price</h6>
                            <p>@Model[i].Description</p>
                            <a class="btn_show px-3 py-2 rounded-pill" href="@Url.Action("Show", "Pizza", new{ Id = Model[i].Id})">View more</a>    
                        </div> 
                    
                    </div> 
                }
